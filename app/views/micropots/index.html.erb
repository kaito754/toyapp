<p id="notice"><%= notice %></p>

<h1>Micropots</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @micropots.each do |micropot| %>
      <tr>
        <td><%= micropot.content %></td>
        <td><%= micropot.user_id %></td>
        <td><%= link_to 'Show', micropot %></td>
        <td><%= link_to 'Edit', edit_micropot_path(micropot) %></td>
        <td><%= link_to 'Destroy', micropot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micropot', new_micropot_path %>
